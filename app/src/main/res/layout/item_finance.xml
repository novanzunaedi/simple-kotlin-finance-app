<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:text="Dari"
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="25dp"
            android:id="@+id/tvDari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/abu_abu"
            android:text="@string/app_name"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="Keterangan"
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/tvKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan Modal"/>

        <TextView
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:text="Jumlah"
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tvJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50000"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:text="Date"
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/02/19"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="1.7dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/LabelNomor"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:textSize="16dp"
                android:text="Nomor"
                android:textColor="@color/hitam"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/LabelNomor"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvNomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UM/190122/1"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/LabelPayby"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:text="Payment by"
                android:textColor="@color/hitam"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/LabelPayby"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tvPayby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="om Kodir"/>
        </RelativeLayout>


        <LinearLayout
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="15dp"
                android:padding="16dp"
                android:background="@drawable/ic_edit"
                android:id="@+id/btFinanceEdit"
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:padding="16dp"
                android:background="@drawable/ic_delete"
                android:id="@+id/btFinanceDelete"
                android:text="Hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>